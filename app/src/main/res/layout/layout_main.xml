<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main"
    android:layout_width="360dp"
    android:layout_height="640dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/id_ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp">

        <ImageButton
            android:id="@+id/id_ib_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/add"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通讯录"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="18sp"
                android:includeFontPadding="false"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="43dp"
                android:layout_height="6dp"
                android:background="@drawable/main_focused"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"/>

        </LinearLayout>



        <!-- music -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音乐"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="19sp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/iv_music"
                android:layout_width="43dp"
                android:layout_height="6dp"
                android:background="@drawable/main_focused"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>



        <!-- setting -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="19sp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>


            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="43dp"
                android:layout_height="6dp"
                android:background="@drawable/main_focused"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/player_search_p"
            android:background="#00000000"
            android:visibility="visible"
            android:layout_gravity="end"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_vp_scoll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="0dp"/>


</RelativeLayout>