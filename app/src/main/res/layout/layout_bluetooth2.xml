<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝牙"
            android:textSize="24sp" />
        <!--Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bluetooth_search"
            android:layout_toRightOf="@id/tv_left"
            android:text="search"/-->

        <com.soling.view.adapter.WiperSwitch
            android:id="@+id/ws_bttop"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@id/rl_three">

        <TextView
            android:id="@+id/tv_opensearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开放检测"
            android:textSize="20sp" />

        <com.soling.view.adapter.WiperSwitch
            android:id="@+id/ws_opensearch"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_four"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rl_five"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的蓝牙名称"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bluetooth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/unknown"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bluetooth_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bluetooth_name"
            android:text="@string/unknown"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/rl_four"
        android:id="@+id/rl_havamatched">
        <TextView
            android:id="@+id/tv_havamatched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="18sp" />

        <ListView
            android:id="@+id/lv_havamatched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_havamatched"></ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/rl_havamatched">
        <TextView
            android:id="@+id/tv_connectdevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/lv_connectdevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_connectdevices"></ListView>
    </RelativeLayout>



</RelativeLayout>
